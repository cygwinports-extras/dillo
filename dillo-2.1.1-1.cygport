DESCRIPTION="Dillo compact web browser"
HOMEPAGE="http://www.dillo.org/"
SRC_URI="http://www.dillo.org/download/${P}.tar.bz2"
PATCH_URI="
	2.0-stdint.h.patch
	2.0-vpath.patch
"

CYGCONF_ARGS="--enable-ipv6 --enable-ssl"

src_install() {
	cd ${B}
	cyginstall

	# DPI plugins must end in .dpi
	for dpi in $(find ${D}/usr/lib/dillo -name '*.exe')
	do
		strip ${dpi}
		mv ${dpi} ${dpi%.exe}
	done
}
